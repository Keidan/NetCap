<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <ProgressBar
    android:id="@+id/progressbar"
    style="?android:attr/progressBarStyleHorizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_centerHorizontal="true"
    android:layout_marginEnd="@dimen/progress_dialog_layout_marginEnd"
    android:layout_marginStart="@dimen/progress_dialog_layout_marginStart"
    android:layout_marginTop="@dimen/progress_dialog_layout_marginTop"
    android:backgroundTint="?colorAccent"
    android:indeterminate="true"
    android:max="100" />

  <TextView
    android:id="@+id/text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/progressbar"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="@dimen/progress_dialog_layout_marginBottom"
    android:layout_marginEnd="@dimen/progress_dialog_layout_marginEnd"
    android:layout_marginStart="@dimen/progress_dialog_layout_marginStart"
    android:layout_marginTop="@dimen/progress_dialog_text_layout_marginTop"
    android:text="@string/loading"
    android:textAlignment="textStart"
    android:textSize="@dimen/progress_dialog_textSize" />
</RelativeLayout>
